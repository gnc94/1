import RPi.GPIO as GPIO
from time import sleep

GPIO.setmode(GPIO.BOARD)

led1 = 29
led2 = 31

GPIO.setup(led1, GPIO.OUT)
GPIO.setup(led2, GPIO.OUT)

GPIO.output(led1, False)
GPIO.output(led2, False)

def ledpattern(v1, v2):
    GPIO.output(led1, v1)
    GPIO.output(led2, v2)

try:
    while True:
        ledpattern(True, False)
        sleep(0.5)
        ledpattern(False, True)
        sleep(0.5)
        ledpattern(True, True)
        sleep(0.5)
        ledpattern(False, False)
        sleep(0.5)

finally:
    GPIO.output(led1, False)
    GPIO.output(led2, False)
    GPIO.cleanup()
